{% extends 'index.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté(e) en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% endif %}

    <h1 class="h3 mt-5 mb-3 font-weight-normal">Connexion</h1>
    <label  class="my-4" for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mx-auto w-75" autocomplete="email" required autofocus>
    <label  class="my-4" for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control mx-auto w-75" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <p class="text-center mt-4">Vous n'avez pas de compte ? Pour vous inscrire cliquer <a class='lien' href="{{path ('app_register')}}">ici</a></p>

    <button class="bouton" type="submit">
        Sign in
    </button>
</form>


<style>
  .lien {
    color: blue;
  }
  .lien:hover {
    color: blue;
  }
</style>

{% block stylesheets %}
{% endblock %}
{% endblock %}
