{% extends "index.html.twig" %}

  {% block body %}
    <h1 class="mt-5">Espace d'administration</h1>
    <h2 class="mb-5">Bienvenue sur la page d'administration<h2>
    
    <h3 class="mb-5">Horaires</h3>
    {% include "admin/_form.html.twig" %}
    
   {# <hr class="mb-5 w-50 mx-auto">
    
    <h3 class="mb-5">galerie</h3>
    {% include "admin/galerie_form.html.twig" %}#}
    
    <hr class="mb-5 w-50 mx-auto">

    <h3 class="mb-5">Carte-Entrées</h3>
    {% include "admin/_entree.form.html.twig" %}

    <hr class="mb-5 w-50 mx-auto">

    <h3 class="mb-5">Carte-Plats</h3>
    {% include "admin/_plat.form.html.twig" %}

    <hr class="mb-5 w-50 mx-auto">

    <h3 class="mb-5">Carte-Désserts</h3>
    {% include "admin/_dessert.form.html.twig" %}

    <hr class="mb-5 w-50 mx-auto">

    <h3 class="mb-5">Menu</h3>
    {% include "admin/_menu.form.html.twig" %}

    <hr class="mb-5 w-50 mx-auto">

    <h3 class="mb-5">Réservations</h3>

      {% for reservations in reservation %}
      <div class="reservation-cards mb-3">
      <div class="card mb-3 pb-3" style="width: 18rem;">
        <div class="card-body">
        <h5 class="card-title">
          {{ reservations.id }} - {{ reservations.nom }}
        </h5>
        <p class="card-text">
          Le {{ reservations.date|date('d-m-Y') }} à 
          {{ reservations.heure|date('h:i') }}
        <br>
          Couverts : {{ reservations.couverts }}
        <br>
          Allergies : {{ reservations.allergie }}
        </p>
          <a href="" class="bouton">Supprimer</a>
        </div>
      </div>
      </div>
    {% endfor %}
  {% endblock %}
        
{% block stylesheets %}   
<style>
  .reservation-cards {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    width: auto;
  }
